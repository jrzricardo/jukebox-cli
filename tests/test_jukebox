require 'minitest/autorun'
require './jukebox'

class TestJukebox < Minitest::Test
  def insert_coin
    @jukebox = Jukebox.new
  end
  
  def test_add_track
    assert_empty @jukebox.tracks

  @jukebox.add_track("Mirage", "Toro y Moi")
    assert_equal 1, @jukebox.tracks.length
    assert_equal "Mirage by Toro y Moi", @jukebox.tracks.first.to_s
  end
end
